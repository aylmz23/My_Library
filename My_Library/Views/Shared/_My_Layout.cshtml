<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Libray</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/My_Library.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous" />
</head>
<body>
    <div class="container-fluid bg-dark bg-opacity-25 p-3 d-flex h-100">
        <div class="col-2 bg-dark">
            <div class="d-flex flex-column flex-shrink-0 p-3 text-bg-dark" style="width: 280px;">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <svg class="bi pe-none me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
                <span class="fs-4">Sidebar</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto bg-dark">
                <li class="nav-item">
                        <div class="d-flex my-2">
                            <input type="button" class="btn col-2" style="color:wheat" value="<" onclick="history.back()">
                            <input type="button" class="btn col-2" style="color:wheat" value=">" onclick="history.forward()">
                        </div>
                </li>
                <li>
                        <div class="d-flex">
                            <img class="col-2" src="/icon/book.png" alt="" />
                            <a class=" text-white text-decoration-none offset-1 text-start lead col-9" asp-action="Views" asp-controller="Library"> My Libray</a>
                        </div>
                </li>
                <li>
                        <div class="d-flex">
                            <img class=" col-2" src="/icon/list.png" alt="" />
                            <a class="  text-white text-decoration-none offset-1 text-start lead col-9" asp-action="Index" asp-controller="Library"> Book List</a>
                        </div>
                </li>
                <li>
                        <div class="d-flex">
                            <img class=" col-2" src="/icon/addbook.png" alt="" />
                            <a class=" text-white text-decoration-none offset-1 text-start lead col-9" asp-action="Create" asp-controller="Library"> Add Book</a>
                        </div>
                </li> 
                <li>

                        <div class="d-flex">
                            <img class=" col-2" src="/icon/search.png" alt="" />
                            <a class=" text-white text-decoration-none offset-1 text-start lead col-9" asp-action="Search" asp-controller="Library"> Filter Book</a>
                        </div>
                </li>
                <li> 

                </li>
                    <div class="d-flex">
                        <img class=" col-2" src="/icon/excel.png" alt="" />
                        <a class=" text-white text-decoration-none offset-1 text-start lead col-9" href="~/Excel/ExportExcel">Send Excel</a>
                    </div>
                <li>
                </li>
                    <div class="d-flex">
                        <img class=" col-2" src="/icon/addtype.png" alt="" />
                        <a class=" text-white text-decoration-none offset-1 text-start lead col-9" asp-action="Index" asp-controller="BookTypes"> Book Type</a>
                    </div>
                <li>
                    <a href="#" class="nav-link text-white">
                        <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#people-circle"></use></svg>
                        Customers
                    </a>
                </li>
            </ul>
            <hr>
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle me-2">
                    <strong>mdo</strong>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                    <li><a class="dropdown-item" href="#">New project...</a></li>
                    <li><a class="dropdown-item" href="#">Settings</a></li>
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">Sign out</a></li>
                </ul>
            </div>
        </div>
        </div>
        <div class="col-10">
            <main role="main" class="container-fluid aybg">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://kit.fontawesome.com/6c19264a14.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>