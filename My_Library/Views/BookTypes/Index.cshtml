@model IEnumerable<My_Library.Entities.BookType>
@{
    ViewData["Title"] = "Index";
}
<div class="h-100">
    <br />
<h3 class="my-2">Book Type List</h3>

<div class="container-fluid">
    <div class="row col-lg-4 col-md-8 col-sm-12 my-1">
        <a class="btn btn-outline-success " asp-action="Create">Add New Book Type</a>
    </div>
</div>
<br />

    <div class="col-12 col-lg-8 col-md-10 col-sm-12 float-start">
    @foreach (var item in Model)
    {
        <div class="row-cols-2 d-flex my-1 aybgi">
            <div class=" align-self-center">
                <h5 class="">
                    @Html.DisplayFor(modelItem => item.Name)
                </h5>
            </div>
                <div class=" float-end align-content-around">
                <div class="row my-1">
                    <a class="btn btn-success col-5" asp-action="Edit" asp-route-id="@item.Id">Edit</a>                        
                    <a class="btn btn-danger col-5" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
</div>
