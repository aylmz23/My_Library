@model IEnumerable<My_Library.Entities.BookType>
@{
    ViewData["Title"] = "Index";
}
<h3>Book Type List</h3>
<div class="container-fluid">
    <div class="row col-1">
        <a class="btn btn-outline-success " asp-action="Create">Add New</a>
    </div>
</div>
<br />
<div class="row col-12" id="navbarsearch">
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th class="">
                    <h5>
                        Book Type
                    </h5>
                    @* @Html.DisplayNameFor(model => model.Name)*@
                </th>
                <th class="col-4"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="">
                    <td >
                        <h5>
                            @Html.DisplayFor(modelItem => item.Name)
                        </h5>
                    </td>
                    <td>
                        <div class="row ">
                            <a class="btn btn-success col-5" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-danger col-5" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
