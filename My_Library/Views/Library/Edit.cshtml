@model My_Library.Entities.Library
@{
    ViewData["Title"] = "Edit";
}
<div class="h-100">
    <br />
<h3>Edit</h3>
<h4>Library</h4>
<hr />
<div class="row">
    <div class="col-md-6 col-sm-8 col-8">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Image" />
            <input type="hidden" asp-for="CreateDate" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="BookTypeId" class="control-label"></label>
                <select asp-for="BookTypeId" class="form-select" asp-items="ViewBag.BookTypeId"> </select>
                <span asp-validation-for="BookType" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Where" class="control-label"></label>
                <input asp-for="Where" class="form-control" />
                <span asp-validation-for="Where" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="StatusId" class="control-label"></label>
                <select asp-for="StatusId" class="form-select" asp-items="ViewBag.StatusId"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="2" /> </textarea>
            </div>
            <div class="form-group my-2">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Save" class="btn btn-primary col-12 my-2" />
            </div>
            <div>
            <a class="btn btn-outline-secondary col-12 my-2" asp-action="Index">Go to List</a><br />
            <a class="btn btn-primary col-12 my-2 aycl" asp-action="Views">Back to MyLibrary</a>
        </div>
        </form>
        
    </div>
    <div class="col-md-6 col-sm-4 col-4">
                    <div class="flip">
                        <div class="front radius">
                            <img src="/img/@Model.Image" alt="" class="radius" />
                        </div>
                        <div class="back radius bg-dark">
                        <img src="/img/@Model.Image" alt="" class="flip-blur opacity-25" />
                        <div class="d-block centered text-center">
                            <br />
                            <p>@Model.Name</p>
                            <p>@Model.Author</p>
                            <hr />
                            <p>@Model.BookType.Name</p>
                            <p>@Model.Where</p>
                            <p>@Model.Status.status</p>
                            <p>@Model.CreateDate</p>
                        </div>
                    </div>
                </div>
            </div>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
