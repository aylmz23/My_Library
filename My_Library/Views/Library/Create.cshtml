@model My_Library.Entities.Library

@{
    ViewData["Title"] = "Create";
}

<h3>Add New Book</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="BookTypeId" class="control-label"></label>
                <select asp-for="BookTypeId" class="form-select" asp-items="ViewBag.BookTypeId"> </select>
                <span asp-validation-for="BookType" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Where" class="control-label"></label>
                <input asp-for="Where" class="form-control" />
                <span asp-validation-for="Where" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="StatusId" class="control-label"></label>
                <select asp-for="StatusId" class="form-select" asp-items="ViewBag.StatusId"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
            </div>
            <div class="form-group my-2">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" type="file"/>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Create" class="btn btn-primary col-12" />
            </div>
            <div>
                <a class="btn btn-secondary col-12" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
