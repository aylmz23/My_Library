@using My_Library.Entities;
@model IEnumerable<Library>
@{
    ViewData["Title"] = "Home Page";
    int counter = 0;
}

<div class="container-fluid" id="navbarView">
    <div class="row my-2">

        @foreach (var item in Model)
        {
            counter++;
            <div class="col-2">
                <div class="card my-2 bg-dark text-white" style="width:15rem">
                    <div class="ay_card_image align-self-center">
                        <img src="~/Img/@item.Image" class="my-1" alt="...">
                    </div>
                    <div class="card-body">
                        <p class="card-text ay_card_text-Name">@item.Name</p>
                        <p class="card-text ay_card_text-Author">@item.Author</p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning cl-o col-12">Details <span class="position-absolute top-0 start-0 translate-middle badge rounded-pill bg-success"> @counter </span></a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<script>
    function BookDetails() {
        var myModal = new bootstrap.Modal(document.getElementById("myModal"));
        myModal.show();
    };
</script>